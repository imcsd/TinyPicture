{
  "name": "tinypicture",
  "version": "1.0.1",
  "description": "高性能图片批量压缩工具",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --port 5173",
    "dev:electron": "wait-on http://localhost:5173 && npx electron .",
    "build": "vite build",
    "build:win": "npm run build && electron-builder --win"
  },
  "keywords": [
    "image",
    "compression",
    "electron",
    "vue3"
  ],
  "author": "TinyPicture Team",
  "license": "MIT",
  "dependencies": {
    "sharp": "^0.33.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@unocss/reset": "^0.58.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.0",
    "electron-vite": "^3.1.0",
    "unocss": "^0.58.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tinypicture.app",
    "productName": "TinyPicture",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "files": [
      "src/main/**/*",
      "src/utils/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist-electron/renderer",
        "to": "dist-electron/renderer"
      }
    ]
  }
}
